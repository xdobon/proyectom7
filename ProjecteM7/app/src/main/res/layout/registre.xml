<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/formulari_de_registre"
        android:fontFamily="sans-serif-condensed-light"
        android:labelFor="@id/titol"
        android:text="@string/formulari_de_registre"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/tv_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nom"
        android:fontFamily="sans-serif-condensed-light"
        android:labelFor="@id/tv_nom"
        android:text="@string/nom"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/txt_nom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/nom"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/txt_nom"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/tv_cognom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cognom"
        android:fontFamily="sans-serif-condensed-light"
        android:labelFor="@id/tv_cognom"
        android:text="@string/cognom"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/txt_cognom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/cognom"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/txt_cognom"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/tv_correu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/correu_electronic"
        android:fontFamily="sans-serif-condensed-light"
        android:labelFor="@id/tv_correu"
        android:text="@string/correu_electronic"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txt_correu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/correu_electronic"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:labelFor="@id/txt_correu"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/tv_contrasenya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contrasenya"
        android:fontFamily="sans-serif-condensed-light"
        android:labelFor="@id/tv_contrasenya"
        android:text="@string/contrasenya"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/txt_contrasenya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/contrasenya"
        android:ems="10"
        android:fontFamily="sans-serif-condensed-light"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:labelFor="@id/txt_contrasenya"
        android:minHeight="48dp"
        />

    <TextView
        android:id="@+id/tv_sexe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sexe"
        android:fontFamily="sans-serif-condensed-light"
        android:text="@string/sexe"
        android:textSize="24sp"
        />

    <RadioButton
        android:id="@+id/rb_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/home"
        android:minHeight="48dp"
        android:text="@string/home"
        />

    <RadioButton
        android:id="@+id/rb_dona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/dona"
        android:minHeight="48dp"
        android:text="@string/dona"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/accepto_l_us_de_les_meves_dades"
        android:minHeight="48dp"
        android:text="@string/accepto_l_us_de_les_meves_dades" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:onClick="registrar"
        android:text="@string/registrar" />

</LinearLayout>